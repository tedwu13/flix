<h1>Flix Movies</h1>
<h2>Number of Available Movies: <%= @movies.size %></h2>

<% @movies.each do |movie| %>
  <article class="movie">
    <header>
      <!-- <h2><%= movie.title %></h2> -->
      <%= image_for(movie) %>
      <h2><%= link_to movie.title, movie %></h2>
      <h3><%= movie.cast %></h3>
    </header>
    <p>
      <%= truncate(movie.description, length: 35, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= movie.released_on.to_s(:release_date) %></td>
        <td><%= time_ago_in_words(movie.released_on) %> ago</td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
      <tr>
        <th>Duration:</th>
        <td><%= movie.duration %></td>
      </tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(movie) %></td>
      </tr>
    </table>
  </article>
  <%= link_to "Show all movies", movies_path %>
  <%= link_to "Edit", edit_movie_path(movie.id) %>
  <%= link_to "Delete", movie_path(movie), method: :delete, data: {confirm: "Are you sure?"} %>

<% end %>

